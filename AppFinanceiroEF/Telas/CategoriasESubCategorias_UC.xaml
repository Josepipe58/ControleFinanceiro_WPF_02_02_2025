<UserControl x:Class="AppFinanceiroEF.Telas.CategoriasESubCategorias_UC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AppFinanceiroEF.Telas"
             mc:Ignorable="d" d:DesignHeight="800" d:DesignWidth="1200">

    <Grid Background="#FF1C0BE4" Height="800" VerticalAlignment="Top">

        <!--| Titulo das Categorias e SubCategorias |-->
        <TextBlock Text="Categorias e SubCategorias de Despesa, Poupança, Receita e Investimento" FontSize="30" Foreground="#DDDDDD" 
                   Width="1020" Margin="100,105,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>

        <TextBlock Text="Categorias e SubCategorias de Consultar Despesa" FontSize="30" Foreground="#DDDDDD" Width="665" 
               Margin="248,360,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>

        <!--| Relatórios |-->
        <RadioButton Content="Categorias" Style="{StaticResource RadionButtonComImagem}" Margin="340,168,0,0"
                 Command="{Binding Path=DataContext.ComandoDaCategoria, RelativeSource={RelativeSource FindAncestor, 
                 AncestorType={x:Type Window}}}" Width="225"/>

        <RadioButton Content="SubCategorias" Width="225" Style="{StaticResource RadionButtonComImagem}" Margin="610,168,0,0"
                 Command="{Binding Path=DataContext.ComandoDaSubCategoria, RelativeSource={RelativeSource FindAncestor, 
                 AncestorType={x:Type Window}}}"/>

        <!--| Consultas |-->
        <RadioButton Content="Categorias de Despesa" Width="225" Style="{StaticResource RadionButtonComImagem}" Margin="340,427,0,0"
                 Command="{Binding DataContext.ComandoDeConsultarDespesas, RelativeSource={RelativeSource FindAncestor, 
        AncestorType={x:Type Window}}}"/>

        <RadioButton Content="SubCategorias de Despesa" Width="226" Style="{StaticResource RadionButtonComImagem}" Margin="610,427,0,0"
                 Command="{Binding DataContext.ComandoDeConsultarFinancas, RelativeSource={RelativeSource FindAncestor, 
                 AncestorType={x:Type Window}}}"/>
    </Grid>
</UserControl>
